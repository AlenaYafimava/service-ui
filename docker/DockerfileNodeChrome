FROM node:7


RUN apt-get update && apt-get install -y xvfb chromium && \
    rm -rf /var/lib/apt/lists/*


ADD start-chromium.sh /start-chromium.sh
#ADD node-chrome-entrypoint.sh /entrypoint.sh

#ENV DISPLAY :99.0
#ENV CHROME_BIN /usr/bin/chromium-browser --no-sandbox
ENV CHROME_BIN=/start-chromium.sh


